{
  "type": "container",
  "className": "bg-background p-6",
  "style": {
    "width": 800
  },
  "children": [
    {
      "type": "container",
      "className": "max-w-4xl mx-auto",
      "children": [
        {
          "type": "container",
          "className": "mb-6",
          "children": [
            {
              "type": "text",
              "text": "{self.raw.market}",
              "className": "text-3xl font-bold text-foreground mb-2"
            },
            {
              "type": "text",
              "text": "{self.raw.exchange}",
              "className": "px-3 py-1 bg-background border border-border text-sm font-mono text-muted-foreground rounded uppercase inline-block"
            }
          ]
        },
        {
          "type": "container",
          "className": "grid grid-cols-1 md:grid-cols-3 gap-6 mb-8",
          "children": [
            {
              "type": "container",
              "className": "group bg-gradient-to-br from-card to-card/50 border border-border rounded p-6 transition-all duration-300 hover:scale-105 hover:border-green-500/50 hover:shadow-xl",
              "children": [
                {
                  "type": "text",
                  "text": "Last Price",
                  "className": "text-xs text-muted-foreground uppercase tracking-wider mb-3 group-hover:text-green-500 transition-colors"
                },
                {
                  "type": "text",
                  "text": "$${self.raw.last}",
                  "format": {
                    "type": "number",
                    "decimals": 2
                  },
                  "style": {
                    "color": {
                      "condition": {
                        "key": "self.raw.change",
                        "operator": ">",
                        "value": 0
                      },
                      "true": "#00C853",
                      "false": "#D50000"
                    }
                  },
                  "className": "text-4xl font-bold text-foreground block mb-2 group-hover:text-green-500 transition-colors"
                },
                {
                  "type": "container",
                  "className": "flex items-center gap-2",
                  "children": [
                    {
                      "type": "text",
                      "text": "{self.raw.percentage}%",
                      "format": {
                        "type": "number",
                        "decimals": 2
                      },
                      "style": {
                        "color": {
                          "condition": {
                            "key": "self.raw.change",
                            "operator": ">",
                            "value": 0
                          },
                          "true": "#00C853",
                          "false": "#D50000"
                        }
                      },
                      "className": "px-2 py-1 border text-sm font-bold rounded"
                    },
                    {
                      "type": "text",
                      "text": "${self.raw.change}",
                      "format": {
                        "type": "number",
                        "decimals": 2
                      },
                      "style": {
                        "color": {
                          "condition": {
                            "key": "self.raw.change",
                            "operator": ">",
                            "value": 0
                          },
                          "true": "#00C853",
                          "false": "#D50000"
                        }
                      },
                      "className": "text-sm text-green-600 dark:text-green-500 font-semibold"
                    }
                  ]
                }
              ]
            },
            {
              "type": "container",
              "className": "bg-card border border-border rounded p-6",
              "children": [
                {
                  "type": "text",
                  "text": "Bid / Ask",
                  "className": "text-xs text-muted-foreground uppercase tracking-wider mb-3"
                },
                {
                  "type": "container",
                  "className": "space-y-2",
                  "children": [
                    {
                      "type": "container",
                      "className": "flex justify-between items-center",
                      "children": [
                        {
                          "type": "text",
                          "text": "Bid",
                          "className": "text-sm text-muted-foreground"
                        },
                        {
                          "type": "text",
                          "text": "${self.raw.bid}",
                          "format": {
                            "type": "number",
                            "decimals": 2
                          },
                          "className": "text-lg font-mono text-blue-500 font-semibold"
                        }
                      ]
                    },
                    {
                      "type": "container",
                      "className": "flex justify-between items-center",
                      "children": [
                        {
                          "type": "text",
                          "text": "Ask",
                          "className": "text-sm text-muted-foreground"
                        },
                        {
                          "type": "text",
                          "text": "${self.raw.ask}",
                          "format": {
                            "type": "number",
                            "decimals": 2
                          },
                          "className": "text-lg font-mono text-orange-500 font-semibold"
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "container",
              "className": "bg-card border border-border rounded p-6",
              "children": [
                {
                  "type": "text",
                  "text": "Volume 24h",
                  "className": "text-xs text-muted-foreground uppercase tracking-wider mb-3"
                },
                {
                  "type": "text",
                  "text": "{self.raw.baseVolume}",
                  "format": {
                    "type": "volume",
                    "decimals": 2
                  },
                  "className": "text-2xl font-bold text-foreground block mb-1"
                },
                {
                  "type": "text",
                  "text": "Quote: ${self.raw.quoteVolume}",
                  "format": {
                    "type": "volume",
                    "decimals": 0
                  },
                  "className": "text-sm text-muted-foreground font-mono"
                }
              ]
            }
          ]
        },
        {
          "type": "container",
          "className": "bg-card border border-border rounded p-4 text-center",
          "children": [
            {
              "type": "text",
              "text": "Last updated: {self.timestamp}",
              "format": {
                "type": "datetime"
              },
              "className": "text-xs text-muted-foreground font-mono"
            }
          ]
        }
      ]
    }
  ]
}